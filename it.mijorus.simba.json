{
    "app-id": "it.mijorus.simba",
    "runtime": "org.gnome.Platform",
    "runtime-version": "45",
    "sdk": "org.gnome.Sdk",
    "command": "simba",
    "finish-args": [
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--device=dri",
        "--filesystem=host",
        "--talk-name=org.freedesktop.Flatpak",
        "--talk-name=org.freedesktop.portal.OpenURI",
        "--talk-name=org.freedesktop.portal.OpenFile"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        "python3-requirements.json",
        {
            "name": "simba",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "dir",
                    "path": "./"
                }
            ]
        }
    ]
}